# Pxxl.app Frontend Environment Configuration
# AI Knowledge Assistant - Frontend Only with Supabase + Hugging Face

# Application Configuration
NEXT_PUBLIC_APP_NAME=AI Knowledge Assistant
NODE_ENV=production

# Supabase Configuration (Required - Get from Supabase Dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Hugging Face API (Required for AI functionality)
NEXT_PUBLIC_HF_API_TOKEN=your-huggingface-api-token-here

# AI Configuration
NEXT_PUBLIC_AI_MODEL=mistralai/Mistral-7B-Instruct-v0.2
NEXT_PUBLIC_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Application Settings
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_CHUNK_SIZE=1000
NEXT_PUBLIC_MAX_RETRIEVAL_DOCS=5

# Pxxl.app Specific
PORT=3000